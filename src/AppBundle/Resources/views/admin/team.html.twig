{% extends 'AppBundle::base.html.twig' %}

{% block body %}

    <div class="page-header">
        <h1>Teams List</h1>
    </div>

    <p><a class="btn btn-sm btn-default" href="{{ url('teamNew') }}" role="button" id="show_add_form">Add new team</a></p>

    <div id="formBlock"></div>

    <div class="table-responsive">
        <table class="table table-striped table-squad">
            <thead>
            <tr>
                <th>#</th>
                <th>Team</th>
                <th>Code</th>
                <th>Country</th>
                <th>Squad</th>
                <th>Edit</th>
                <th>Remove</th>
            </tr>
            </thead>
            <tbody>
                {% for key, team in teams %}
                    <tr>
                        <td>{{ key + 1 }}</td>
                        <td>
                            <a href="{{ url('team', {'teamName': team.code}) }}">
                                {{ team.name }}
                            </a>
                        </td>
                        <td>{{ team.code }}</td>
                        <td>{{ team.country.name }}</td>
                        <td>
                            {#<a class="edit" href="{{ url('adminSquad', {'teamCode': team.code}) }}">#}
                                edit
                            {#</a>#}
                        </td>
                        <td>
                            <a class="edit" href="{{ url('teamEdit', {'teamCode': team.code}) }}">
                                edit
                            </a>
                        </td>
                        <td>
                            <a class="remove" href="{{ url('teamRemove', {'teamCode': team.code}) }}">
                                remove
                            </a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/script.js') }}"></script>
{% endblock %}