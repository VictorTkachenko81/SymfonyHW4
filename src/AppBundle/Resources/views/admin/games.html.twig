{% extends 'AppBundle::base.html.twig' %}

{% block body %}

    <div class="page-header">
        <h1>Games List</h1>
    </div>

    <p><a class="btn btn-sm btn-default" href="{{ url('gameNew') }}" role="button" id="show_add_form">Add new game</a></p>

    <div id="formBlock"></div>

    <div class="table-responsive">
        <table class="table table-striped table-games">
            <thead>
            <tr>
                <th>#</th>
                <th>Team</th>
                <th>Score</th>
                <th>Team</th>
                <th>Round</th>
                <th>Referee</th>
                <th>Stadium</th>
                <th>Date</th>
                <th>Edit</th>
                <th>Remove</th>
            </tr>
            </thead>
            <tbody>
                {{ include( 'AppBundle:admin:gamesList.html.twig' ) }}
            </tbody>
        </table>
    </div>

    {{ form(delete) }}

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/script.js') }}"></script>
{% endblock %}